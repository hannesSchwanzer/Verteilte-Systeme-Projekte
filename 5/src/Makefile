
# This was a template Makefile generated by rpcgen
# Compile with gcc
CC=gcc
# Additional flags to pass to gcc:
# -g : generate debug information so we can use gdb to debug
# -I <dir> : look in directory <dir> for additional .h files
CFLAGS=-g -I../include 
# all warnings + warnings are considered as errors
CFLAGS += -Wall -Wno-unused-variable -Wno-return-type -Werror -DRPC_SVC_FG 

# Directory where to put the binaries
BINDIR = ..

# Parameters

CLI    = $(BINDIR)/hamster_climenue
CLIENT = $(BINDIR)/hamster_cliclient
SERVER = $(BINDIR)/hamster_server

SOURCES_CLNT.c = hamster_cli.c
SOURCES_CLNT.h = 
SOURCES_SVC.c = 
SOURCES_SVC.h = 
SOURCES.x = hamster.x

TARGETS_SVC.c = hamster_svc.c hamster_server.c hamster_xdr.c 
TARGETS_CLNT.c = hamster_clnt.c hamster_client.c hamster_xdr.c 
TARGETS = hamster.h hamster_xdr.c hamster_clnt.c hamster_svc.c

OBJECTS_CLI = $(SOURCES_CLNT.c:%.c=%menue.o)
OBJECTS_CLNT = $(SOURCES_CLNT.c:%.c=%.o) $(TARGETS_CLNT.c:%.c=%.o)
OBJECTS_SVC = $(SOURCES_SVC.c:%.c=%.o) $(TARGETS_SVC.c:%.c=%.o)
# Compiler flags 

CFLAGS += -g 
LDLIBS += -lnsl
LDLIBS_SVC=-L../libsrc -lhamster

RPCGENFLAGS =

# Targets 

all : $(CLI) $(CLIENT) $(SERVER)

$(TARGETS) : $(SOURCES.x) 
	rpcgen $(RPCGENFLAGS) $(SOURCES.x)

$(OBJECTS_CLI) : $(SOURCES_CLNT.c) $(SOURCES_CLNT.h)
	$(CC) $(CFLAGS) -DUMMY_RPC -c -o $@ $<

$(OBJECTS_CLNT) : $(SOURCES_CLNT.c) $(SOURCES_CLNT.h) $(TARGETS_CLNT.c) 

$(OBJECTS_SVC) : $(SOURCES_SVC.c) $(SOURCES_SVC.h) $(TARGETS_SVC.c) 

$(CLI) : $(OBJECTS_CLI) 
	$(LINK.c) -o $(CLI) $(OBJECTS_CLI) $(LDLIBS_SVC)

$(CLIENT) : $(OBJECTS_CLNT) 
	$(LINK.c) -o $(CLIENT) $(OBJECTS_CLNT) $(LDLIBS)

$(SERVER) : $(OBJECTS_SVC) 
	$(LINK.c) -o $(SERVER) $(OBJECTS_SVC) $(LDLIBS) $(LDLIBS_SVC)

clean:
	 $(RM) core $(TARGETS) $(OBJECTS_CLNT) $(OBJECTS_SVC) $(OBJECTS_CLI)

distclean: clean
	 $(RM) $(CLI) $(CLIENT) $(SERVER)
